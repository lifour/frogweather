.content{
    font-family : 微软雅黑,宋体;
    font-size: 15px;
    color:#FFFFFF;  
    background-image: url("https://img-blog.csdnimg.cn/20200605112216580.jpg");
    background-repeat:no-repeat; 
    background-size:100% 100%;
    -moz-background-size:100% 100%;
}
.info{
    padding:20px;
    background:#FFFFFF;
    background:rgba(0, 0, 0, 0.5);
    box-shadow:10px 10px 20px rgba(0,0,0,0.5);
}
.today{
    padding-top: 50rpx;
    height: 50%;
     
}
.city{
    color:white;
    font-size: 16px;
    text-align: right;
    margin-right:10rpx;
    margin-top:30rpx;
}
.temp{
    font-size: 50px;
    text-align: center;
}
.weather{
    text-align: center;
}
.future{
     height: 30%;
     display: flex;
     flex-direction: row;
     padding-left: 5rpx;
     padding-right: 5rpx;
     text-align: center;
     padding-top:40%;
     padding-bottom:10%;
}
.future-item{
    min-height:100%;
    width: 170rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
    border: 1px solid coral;
    background:rgba(100, 112, 100, 0.534);
    box-shadow:10px 10px 20px rgba(0,0,0,0.5);
    border-radius:10px;
    padding-top:8%;
    padding-bottom:8%;
}
.future-item view{
    margin-top:5px;
}